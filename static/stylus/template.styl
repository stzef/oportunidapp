/* custom template */
html,
body
  font-family verdana,arial,sans-serif
  color #555555
  
html
  position relative
  min-height 100%

body
  margin-bottom 60px
  font-size 17px

.nav
  font-family Arial,sans-serif
  font-size 15px

.grey
  background-color #F5F5F5

a
  color #222222

a:hover
  text-decoration none

hr
  border-color #dedede

.wrapper,
.row
  height 100%
  margin-left 0
  margin-right 0

.wrapper:before,
.wrapper:after,
.column:before,
.column:after
  content ""
  display table

.wrapper:after,
.column:after
  clear both

.column
  height 100%
  overflow auto
  *zoom 1

.column .padding
  padding 20px


.box
  bottom 0
  /* increase for footer use */
  left 0
  position absolute
  right 0
  top 0
  background-color #444444
  /*
    background-image:url('/assets/example/bg_suburb.jpg')
    background-size:cover
    background-attachment:fixed
  */

.divider
  margin-top 32px

.navbar
  margin-bottom 0px

.navbar-blue
  border-width 0
  background-color #2C3E50
  color #ffffff
  font-family arial,sans-serif
  top 0
  position fixed
  width 100%
  z-index 100

.navbar-blue li > a,
.navbar-toggle
  color #efefef

.navbar-blue .dropdown-menu li a
  color #2A4888

.navbar-blue .dropdown-menu li > a
  padding-left 30px

.navbar-blue li>a:hover,
.navbar-blue li>a:focus,
.navbar-blue .open,
.navbar-blue .open>a,
.navbar-blue .open>a:hover,
.navbar-blue .open>a:focus
  color #000

#main
  background-color #e9eaed
  padding-left 0
  padding-right 0

#main .img-circle
  margin-top 18px
  height 70px
  width 70px

#sidebar
  padding 0px
  padding-top 15px

#sidebar,
#sidebar a,
#sidebar-footer a
  color #ffffff
  background-color #34495e
  padding-left 0px
  font-size 14px

#sidebar .nav li>a:hover
  border-left-style solid
  border-left-color #2e8ece
  background-color #2C3E50

.logo
  display block
  padding 3px
  background-color #fff
  color #3B5999
  height 28px
  width 28px
  margin 9px
  margin-right 2px
  margin-left 15px
  font-size 20px
  font-weight 700
  text-align center
  text-decoration none
  text-shadow 0 0 1px
  border-radius 2px
  
.user
  display block
  background-color #fff
  padding 3px
  height 30px
  width auto
  margin 9px
  margin-right 2px
  margin-left 15px
  font-size 20px
  border-radius 2px

#sidebar-footer
  background-color #444
  position absolute
  bottom 5px
  padding 5px

#footer
  padding 15px

/* bootstrap overrides */
h1,
h2,
h3
  font-weight 800

.navbar-nav
  text-align center

.navbar-toggle,
.close
  outline 0

.navbar-toggle .icon-bar
  background-color #fff

.btn-primary,
.label-primary,
.list-group-item.active,
.list-group-item.active:hover,
.list-group-item.active:focus
  background-color #2980b9
  color #fffffe

.btn-default
  color #666666
  text-shadow 0 0 1px rgba(0,0,0,.3)

.badge
  color #3B5999
  background-color #fff

.badge:hover,
.badge-inverse
  background-color #3B5999
  color #fff

.jumbotron
  background-color transparent

.label-default
  padding 5px

.page-header
  border-bottom 1px solid #ccc

.panel{
  //padding 20px
  margin 0 0 20px 0
}

.panel-default .panel-heading
  background-color #f9fafb
  color #555555

.col-sm-9.full
  width 100%

.modal-header,
.modal-footer
  background-color #f2f2f2
  font-weight 800
  font-size 12px

.modal-footer i,
.well i
  font-size 20px

.modal-body
  padding 0px

.modal-body textarea.form-control
  resize none
  box-shadow 0 0 0

.navbar-user
  float right
  padding 5px

small.text-muted
  font-family courier,courier-new,monospace

/* adjust the contents on smaller devices */

.file::-webkit-file-upload-button
  visibility hidden

.file::before
  content 'Seleccione Imagen'
  display inline-block
  background #3498DB
  border-radius 3px
  padding 5px 8px
  outline none
  white-space nowrap
  -webkit-user-select none
  cursor pointer
  color #fff
  font-weight 700
  font-size 10pt

.file:hover::before
  border-color black

.file:active::before
  background #27ae60
  
.icon-menu
  padding-right 7px
  
.nav>li>a
  transition all 0.2s

.a-padding
  padding 12px 15px 12px !important
  
.name-nav
  padding-top 10px
  
.navbar-nav>li>a:hover
  background-color #34495e
  color #fff
  
.nav .open>a, .nav .open>a:hover, .nav .open>a:focus
  background-color #34495e !important
  
.min-nav>a:focus 
  background-color #34495e !important
  color #fff !important
  


.well
  background-color #fff !important
  
.label-back
  background-color #3498db
  text-align center
  color #fff
  width 200px
  height auto
  padding 2px
  font-size 16px
  float left

.image-logo
  display none

.img-logo
  width 50px
  height auto

.label-back:hover
  color #fff
  
.label-descp-3
  margin 0 auto
  padding 5px
  color #fff
  font-size 18px
  border-radius .25em
  margin-bottom 5px
  
.name-user-h4
  margin-bottom -5px
  
.find
  margin-top 120px

.content-comment
  margin-bottom 10px
  background-color #fff
  height auto
  width 100%
  padding 10px
  border-radius 5px 5px 5px 5px
  -moz-border-radius 5px 5px 5px 5px
  -webkit-border-radius 5px 5px 5px 5px
  border 0px solid #000000
  
.comment
  font-size 16px
  line-height 23px
  
.need
  margin-top 50px
  margin-bottom 50px
  
.n-red
  padding 3px
  border-radius 5px 5px 5px 5px
  -moz-border-radius 5px 5px 5px 5px
  -webkit-border-radius 5px 5px 5px 5px
  border 0px solid #000000
  color #fff
  
.date-need
  float right
  font-style italic

.spacing
  margin-bottom 10px
  
.category-show
  width auto
  max-height 300px
  
.content-modal
  padding 10px
  
.accept
  text-align center
  margin-top 20px
  margin-bottom  20px
  
.red-color
  color #fff
  background-color #e74c3c
  padding 15px

@media screen and (max-width 991px)
  .desc-sign
    display none
  
  .div-align
    text-align center
    padding 0 10px 0 10px
    
  .text-top
    margin-bottom 10px
  
  .first
    margin-bottom 40px

@media (max-width 768px)
  .column .padding
    padding 7px

  .navbar-blue
    background-color #2C3E50
    top 0
    width 100%
    position relative
  
  .desc-img
    display none
    
  .logo-app
    display none
    
  .image-logo
    display inline-block  
    
@media (max-width 991px)
  .right-noticie
    display none
/*
 * off canvas sidebar
 * --------------------------------------------------
 */

@media screen and (max-width 820px)
  .desc
    display none
  .desc3
    font-size 16px
    text-align center

@media screen and (max-width 768px)
  .img-detail-2
    margin-top 0px !important
    
  .True-state
    text-align center !important
    
  .False-state
    text-align center !important
  
  .row-offcanvas
    position relative
    -webkit-transition all 0.25s ease-out
    -moz-transition all 0.25s ease-out
    transition all 0.25s ease-out
    
  .desc2
    font-size 30px
    text-align center
    
  .label-descp
    width 100px !important

  .row-offcanvas-left.active
    left 33%

  .row-offcanvas-left.active .sidebar-offcanvas
    left -33%
    position absolute
    top 0
    width 33%
    margin-left 5px
  
  .min-nav
    text-align center
    display inline-block !important
    
  .navbar-nav .open .dropdown-menu
    position absolute
    
@media screen and (max-width 350px)
  .icon-menu
    display none
    
  .label-category
    width 170px !important