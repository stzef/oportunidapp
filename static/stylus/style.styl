@import "landingpage.styl"
@import "template.styl"

rojo = #E74C3C
verder = #2ECC71
azul = #3498DB

ul
	list-style none
	margin 0
	padding 0

.logo
	margin 0
	padding-top 60px
	padding-bottom 20px
	text-align center
.center
	text-align center
.container-logo
	background #F5F5F5
	border-radius 6px
	border 1px solid gainsboro
	margin 0 auto
	max-width 420px
	margin-bottom 30px
	padding 35px
	h6
		margin 0
		padding-bottom 20px
.error-login
	border-radius 5px
	color white
	font-size 16px
	line-height 1.5
	margin-bottom 15px

.error-space
	color rojo
	font-size 16px
	line-height 1.2
	margin-bottom 13px

.underline
	text-decoration underline

.habilidad-item
	margin-bottom 10px

.desc-img
	width 150px

.form-control
	margin-bottom 10px
	
.form-signin
	max-width 330px
	margin 0 auto
	padding 15px

.form-signin .form-signin-heading,.form-signin .checkbox
	margin-bottom 10px

.form-signin .checkbox
	font-weight normal
	
.form-signin .form-control
	position relative
	font-size 16px
	height auto
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding 10px

.form-signin .form-control:focus
	z-index 2
	
.form-signin input[type="text"]
	margin-bottom -1px
	border-bottom-left-radius 0
	border-bottom-right-radius 0
	
.form-signin input[type="password"]
	margin-bottom 10px
	border-top-left-radius 0
	border-top-right-radius 0
	
//
.form-registry
	max-width 330px
	margin 0 auto
	padding 15px

.form-registry .form-registry-heading,.form-registry .checkbox
	margin-bottom 10px

.form-registry .checkbox
	font-weight normal
	
.form-registry .form-control
	position relative
	font-size 16px
	height auto
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	padding 10px

.form-registry .form-control:focus
	z-index 2
	
.form-registry input[type="text"]
	margin-bottom -1px
	
.form-registry input[type="password"]
	margin-bottom 10px

.account-wall
	margin-top 100px
	background-color #f7f7f7
	-moz-box-shadow 0 2px 2px rgba(0,0,0,0.3)
	-webkit-box-shadow 0 2px 2px rgba(0,0,0,0.3)
	box-shadow 0 2px 2px rgba(0,0,0,0.3)
	padding 20px 0 20px
	margin-bottom 100px
	
.login-title
	color #555
	font-size 18px
	font-weight 400
	display block
	
.profile-img
	width 96px
	height 96px
	display block
	-moz-border-radius 50%
	-webkit-border-radius 50%
	border-radius 50%
	margin 0 auto 10px
	
.need-help
	font-size 15px
	
.new-account
	display block
	margin-top 10px

.body-login
	background-color #DADADA
	
.errorlist
	color rgb(219, 44, 44)
	font-size 15px

.special-img
	padding 5px